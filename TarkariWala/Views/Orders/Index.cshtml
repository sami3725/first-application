@model IEnumerable<TarkariWala.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = null;

}
    <div class="card">
        <div class="card-header">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-success" type="button" value="Add New"><i class="fas fa-plus"></i>Add New</button>
            </div>
        </div>
        <div class="card-body">
            <div class="container">
                <table class="table" id="ordertable" border="1">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Client.ClientName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Product.Image)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DeliveryTime)
                            </th>
                            <th>Edit</th>
                            <th>Delete</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Client.ClientName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Product.Image)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeliveryTime)
                                </td>
                                <td>
                                    <i class="fas fa-edit"></i>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderID })

                                </td>

                                <td>
                                    <i class="fas fa-trash-alt"></i>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderID })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
<link href="~/Content/datatable jq/jquery.dataTables.min.css" rel="stylesheet" />

@section scripts{

    <script src="~/Content/datatable jq/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#ordertable').DataTable({

            });
        });
    </script>
}
