@model TarkariWala.Models.Municipality

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm("Create","Municipalities")) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Municipality</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-md-6">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.MunicipalityName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MunicipalityName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MunicipalityName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.DistrictID, "DistrictID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="input-group col-md-10">
                    @Html.DropDownList("DistrictID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DistrictID, "", new { @class = "text-danger" })
                    <div class="input-group-append">
                        <button type="button" class="btn-success" data-toggle="modal" data-target="#DistrictsCreateModal">
                            <i class="fa fa-plus-circle"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

<div class="modal fade" id="DistrictsCreateModal" tabindex="-1" role="dialog" aria-labelledby="DistrictsCreateModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">

        @Html.Action("DistrictsCreateModal", "Municipalities")

    </div>
</div>
